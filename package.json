{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "radarr",
  "title": "Radarr",
  "description": "Manage your Radarr movie collection with powerful search, monitoring, and download management capabilities",
  "icon": "extension-icon.png",
  "author": "xjo_nd",
  "license": "MIT",
  "preferences": [
    {
      "name": "instances",
      "type": "textfield",
      "required": true,
      "title": "Radarr Instances",
      "description": "JSON configuration of Radarr instances: [{\"name\":\"Main\", \"url\":\"http://localhost:7878\", \"apiKey\":\"your-api-key\", \"isDefault\":true}]",
      "placeholder": "[{\"name\":\"Main\", \"url\":\"http://localhost:7878\", \"apiKey\":\"your-api-key\", \"isDefault\":true}]"
    }
  ],
  "commands": [
    {
      "name": "search-movies",
      "title": "Search Movies",
      "description": "Search and add movies to Radarr",
      "mode": "view",
      "arguments": [
        {
          "name": "query",
          "placeholder": "Movie name",
          "type": "text",
          "required": false
        }
      ]
    },
    {
      "name": "upcoming-releases",
      "title": "Upcoming Releases", 
      "description": "View upcoming movie releases",
      "mode": "view"
    },
    {
      "name": "download-queue",
      "title": "Download Queue",
      "description": "Manage active downloads",
      "mode": "view"
    },
    {
      "name": "movie-library",
      "title": "Movie Library",
      "description": "Browse your movie collection",
      "mode": "view"
    },
    {
      "name": "missing-movies",
      "title": "Missing Movies", 
      "description": "View missing or wanted movies",
      "mode": "view"
    },
    {
      "name": "system-status",
      "title": "System Status",
      "description": "Check Radarr system health",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.102.3",
    "@raycast/utils": "^1.17.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}